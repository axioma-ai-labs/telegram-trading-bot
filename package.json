{
  "name": "neurodex-bot",
  "version": "1.0.0",
  "description": "A scalable Telegram trading bot built with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/bot.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "telegram",
    "trading",
    "bot",
    "typescript"
  ],
  "author": "NeuroFoundation",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "@quicknode/sdk": "^2.4.2",
    "@types/crypto-js": "^4.2.2",
    "axios": "^1.9.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.0",
    "grammy": "^1.36.1",
    "tsconfig-paths": "^4.2.0",
    "viem": "^2.29.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@prisma/ppg-tunnel": "^0.3.0",
    "@types/node": "^20.17.43",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "ts-prune": "^0.10.3",
    "typescript": "5.5.3"
  }
}
