{
  "name": "neurodex-bot",
  "version": "1.0.0",
  "description": "A scalable Telegram trading bot built with TypeScript",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "TS_NODE_PROJECT=tsconfig.json TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/bot.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/bot.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:load": "k6 run tests/rate-limit.test.js",
    "test:load:quick": "k6 run --iterations 10 tests/rate-limit.test.js",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "telegram",
    "trading",
    "bot",
    "typescript"
  ],
  "author": "NeuroFoundation, LLC",
  "license": "MIT",
  "dependencies": {
    "@covalenthq/client-sdk": "^2.2.6",
    "@grammyjs/i18n": "^1.1.2",
    "@grammyjs/ratelimiter": "^1.2.1",
    "@logtail/node": "^0.5.5",
    "@logtail/winston": "^0.5.5",
    "@openocean.finance/limitorder-sdk": "^0.2.29",
    "@prisma/client": "^6.8.2",
    "@prisma/extension-accelerate": "^1.3.0",
    "@supabase/supabase-js": "^2.49.8",
    "@types/crypto-js": "^4.2.2",
    "@types/js-yaml": "^4.0.8",
    "argon2": "^0.43.0",
    "axios": "^1.9.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.0",
    "grammy": "^1.36.1",
    "js-yaml": "^4.1.0",
    "libsodium-wrappers": "^0.7.15",
    "prisma-field-encryption": "^1.6.0",
    "tsconfig-paths": "^4.2.0",
    "viem": "^2.29.2",
    "web3": "^4.16.0",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@prisma/ppg-tunnel": "^0.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/argon2": "^0.15.4",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^20.17.46",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "prisma": "^6.8.2",
    "ts-node-dev": "^2.0.0",
    "ts-prune": "^0.10.3",
    "typescript": "5.5.3"
  }
}