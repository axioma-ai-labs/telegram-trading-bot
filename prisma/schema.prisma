generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  telegramId    String         @unique
  username      String?
  firstName     String?
  lastName      String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  wallets       Wallet[]
  transactions  Transaction[]
  settings      Settings?
  referralCode  String?        @unique
  referredById  String?
  termsAccepted Boolean        @default(false)
  referredBy    User?          @relation("Referrals", fields: [referredById], references: [id])
  referrals     User[]         @relation("Referrals")
  referralStats ReferralStats?
}

model ReferralStats {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
  feeRate        Float    @default(0.10) // 10% default fee rate
  totalReferrals Int      @default(0)
  totalTrades    Int      @default(0)
  totalVolume    Float    @default(0)
  totalEarned    Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Wallet {
  id           String        @id @default(cuid())
  address      String        @unique
  chain        String
  type         String        @default("generated")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User          @relation(fields: [userId], references: [id])
  userId       String
  transactions Transaction[]

  @@index([userId])
}

enum TransactionType {
  BUY
  SELL
  LIMIT_ORDER
  DCA
  WITHDRAW
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELED
}

model Transaction {
  id            String            @id @default(uuid())
  transactionId Int               @default(autoincrement())
  type          TransactionType
  status        TransactionStatus @default(PENDING)
  chain         String
  userId        String
  user          User              @relation(fields: [userId], references: [id])
  walletId      String
  wallet        Wallet            @relation(fields: [walletId], references: [id])
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  // Token input details
  tokenInAddress String?
  tokenInSymbol  String?
  tokenInAmount  Float?

  // Token output details  
  tokenOutAddress String?
  tokenOutSymbol  String?
  tokenOutAmount  Float?

  // Transaction details
  txHash    String?
  orderHash String? // For limit orders and DCA

  // DCA specific fields
  times  Int? // Number of executions for DCA
  expire String? // Expiration time

  // Withdrawal specific
  toAddress String? // Recipient address for withdrawals

  @@unique([transactionId])
  @@index([userId])
  @@index([walletId])
  @@index([type])
  @@index([status])
}

model Settings {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  language    String   @default("en")
  autoTrade   Boolean  @default(false)
  proMode     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  gasPriority String   @default("medium")
  slippage    String   @default("1")
}
